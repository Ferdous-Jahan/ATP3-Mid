<body>

    <!------ Include the above in your HEAD tag ---------->

    <div class="container">
   
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create Product</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST" action="/add">
                   
                                <div class="form-group">
                                    <input type="text" name="productName" id="name" class="form-control input-lg"
                                        placeholder="Product Name">
                                </div>

                                <div class="form-group">
                                    <input type="number" name="quantity" id="phone" class="form-control input-lg"
                                        placeholder="Quantity">
                                </div>

                                <div class="form-group">
                                    <input type="text" name="price" id="email" class="form-control input-lg"
                                        placeholder="Price">
                                </div>
                                
                                <input type="submit" value="Add" class="btn btn-info btn-block">

                        </form>
                    </div>
                </div>
        
 
    </div>

</body>

</html>